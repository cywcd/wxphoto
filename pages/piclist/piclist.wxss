/**swiper**/
.swipebox{height:200px}
.slide-image{  
    width: 100%;  
}
.slide-txt{
    width:100%;
    height:50rpx;
    line-height:50rpx;
    background:rgba(0, 0, 0, 0.6);
    position:absolute;
    left:0;
    bottom:0;
    color:#fff;
    font-size:12px;
    padding:0 10px;
    word-break:keep-all;
    overflow:hidden;
    text-overflow:ellipsis;
}

/**news**/
.news-list {
  padding:0 20rpx 20rpx;
  display: block;
  margin:15rpx 0;
}

.news-item {
  display: flex;
  flex-direction: row;
  margin:.3rem 0;
}

.news-text {
  width:100%;
  box-sizing:border-box;
  padding:0 15rpx;
}

.news-stamp {
    font-size: 25rpx;
    color:darkgray;
    display: flex;
    flex-direction: row;
    justify-content:space-between;
}

.news-title {
  margin: 10rpx 0;
  height:60rpx;
  display:block;
  font-size: 30rpx;
}

.list-image {
  width:240rpx;
  height:120rpx;
}